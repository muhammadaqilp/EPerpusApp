<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.eperpusapp.Fragment.HomeFragment"
        android:label="@string/title_library"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_mybook"
        android:name="com.example.eperpusapp.Fragment.MyBookFragment"
        android:label="@string/title_mybook"
        tools:layout="@layout/fragment_my_book" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.eperpusapp.Fragment.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history" />
    <activity
        android:id="@+id/bookDetailActivity"
        android:name="com.example.eperpusapp.BookDetailActivity"
        android:label="activity_book_detail"
        tools:layout="@layout/activity_book_detail" />

</navigation>